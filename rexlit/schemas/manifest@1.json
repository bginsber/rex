{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rexlit.io/schemas/manifest@1.json",
  "title": "RexLit Document Manifest v1",
  "description": "Schema for document manifests generated during ingest",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "path",
    "sha256",
    "size",
    "mime_type",
    "doctype"
  ],
  "properties": {
    "schema_id": {
      "type": "string",
      "const": "manifest",
      "description": "Schema identifier"
    },
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version"
    },
    "producer": {
      "type": "string",
      "description": "Producer identifier (e.g., 'rexlit-0.1.0')"
    },
    "produced_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when manifest was produced"
    },
    "content_hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of manifest content (excludes metadata fields)"
    },
    "path": {
      "type": "string",
      "description": "Document path"
    },
    "sha256": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of document"
    },
    "size": {
      "type": "integer",
      "minimum": 0,
      "description": "File size in bytes"
    },
    "mime_type": {
      "type": "string",
      "description": "MIME type"
    },
    "doctype": {
      "type": "string",
      "description": "Document type (pdf, docx, txt, etc.)"
    },
    "custodian": {
      "type": ["string", "null"],
      "description": "Custodian name extracted from path"
    },
    "date_collected": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Collection timestamp"
    },
    "metadata": {
      "type": "object",
      "description": "Additional document metadata"
    }
  }
}
