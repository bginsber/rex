{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rexlit.dev/schemas/safe_manifest@1.json",
  "title": "RexLit Safe Manifest",
  "description": "Sanitized manifest with redacted sensitive fields (paths, custodians) for secure discovery production",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "sha256",
    "size",
    "mime_type",
    "extension",
    "custodian"
  ],
  "properties": {
    "schema_id": {
      "type": "string",
      "const": "safe_manifest",
      "description": "Schema identifier"
    },
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version"
    },
    "sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "Document SHA-256 hash (kept for tracking and deduplication)"
    },
    "size": {
      "type": "integer",
      "minimum": 0,
      "description": "Document size in bytes"
    },
    "mime_type": {
      "type": ["string", "null"],
      "description": "MIME type of document"
    },
    "extension": {
      "type": ["string", "null"],
      "description": "File extension"
    },
    "doctype": {
      "type": ["string", "null"],
      "description": "Document type classification (emails masked if present)"
    },
    "produced_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of manifest generation"
    },
    "producer": {
      "type": ["string", "null"],
      "description": "Tool/agent that generated the manifest"
    },
    "custodian": {
      "type": "string",
      "const": "REDACTED",
      "description": "Custodian identifier (always REDACTED in safe manifest)"
    }
  },
  "additionalProperties": false
}
