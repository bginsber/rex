{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rexlit.io/schemas/audit@1.json",
  "title": "RexLit Audit Entry v1",
  "description": "Schema for audit ledger entries with hash chain",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "timestamp",
    "operation",
    "inputs",
    "outputs",
    "hash",
    "previous_hash"
  ],
  "properties": {
    "schema_id": {
      "type": "string",
      "const": "audit",
      "description": "Schema identifier"
    },
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version"
    },
    "producer": {
      "type": "string",
      "description": "Producer identifier (e.g., 'rexlit-0.1.0')"
    },
    "produced_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when entry was produced"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of operation"
    },
    "operation": {
      "type": "string",
      "description": "Operation name (e.g., 'ingest', 'index_build')"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of input paths/identifiers"
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of output paths/identifiers"
    },
    "args": {
      "type": "object",
      "description": "Additional operation arguments"
    },
    "hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of this entry"
    },
    "previous_hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of previous entry"
    }
  }
}
